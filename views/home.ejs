<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Navan4U</title>
    <link rel="stylesheet"  href="./css/bootstrap.min.css">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Stint+Ultra+Condensed&display=swap" rel="stylesheet">
    <style>
      .ctr{
        display:flex;
        justify-content: center;
        align-items: center;
      }
      .heading{
        font-size: 56px;
        font-family: 'Stint Ultra Condensed', cursive;
      }
      .clr{
        background-color:#f65a5b;
        color:white
      }

    </style>
</head>
<body>

  <%- include('./partials/header') %> 


  <div class="container mt-5">
    <div class="row">
      <div class="col-md-6 ctr" >
        <div>
          <h1 class="heading">Welcome to cloudinary</h1>
          <p>This is the simple image upload web app using the cloudinary app</p>
          <a href="https://www.npmjs.com/package/formidable" class="btn btn-primary">READ MORE</a>
        </div>
      </div>
      <div class="col-md-6">
        <img src="./imgs/formidable.svg" width="100%" alt="">
      </div>
    </div>
  </div>

  <div class="container mt-5 mb-5">
    <div class="row">
      <div class="col-md-6">
        <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
          <div class="carousel-inner">
            <% images.forEach((image,index) => { %>
              <% if (index===0) { %>
                <div class="carousel-item active">
                  <img src="<%= image %> " class="d-block w-100" height="500px" alt="...">
                </div>
              <% }else{ %>
                <div class="carousel-item ">
                  <img src="<%= image %> " class="d-block w-100" height="500px" alt="...">
                </div>
              <% } %> 
            <% }) %>
          </div>
          <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
          </button>
        </div>
      </div>
      <div class="col-md-6 ctr">
        <div>
          <h1 class="heading">Our Shamlaji trip</h1>
          <p>
            Lorem ipsum, dolor sit amet consectetur adipisicing elit.
             Quis molestiae fuga ipsa. At ad sapiente id adipisci excepturi nihil quod?
          </p>
        </div>
      </div>
     
    </div>
  </div>
    
  <div class="container mb-5">
    <div class="row justify-content-center">
      <div class="col-8">
        <h1 class="heading">JOIN US FOR FREE TO GET INSTANT EMAIL UPDATES! </h1>
        <p class="text-lead">JOIN US FOR FREE TO GET INSTANT EMAIL UPDATES!</p>
      </div>
    </div>
    <div class="row justify-content-center mt-3">
      <div class="col-8">
        <div class="input-group mb-3">
          <input type="text" name="toEmail" id="email" class="form-control" placeholder="Your Email here" >
          <button class="input-group-text clr"  id="basic-addon2">abc@example.com</button>
        </div>
      </div>
    </div>
  </div>



    <script src="./js/bootstrap.bundle.min.js"></script>
    <script>
      const btn=document.getElementById('basic-addon2');
      btn.addEventListener('click',(e)=>{
        const email=document.getElementById("email").value;
        const data={
          toemail:email
        };
        document.getElementById("email").value="";
        fetch('/subscribe',{
          method:'POST',
          body:JSON.stringify(data),
          headers:{"Content-Type":"application/json"}
        })

      })
    </script>
</body>
</html>

